<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Tournament Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Tournament Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the phone number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address"
                    name="emailaddress" required>
                </div>
               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tournament-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

